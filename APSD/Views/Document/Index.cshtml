@model IEnumerable<APSD.Models.Document_Tbl>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <span class="card-title">
                        Address Details
                        <div class="float-end btn btn-outline-primary text-decoration-none text-dark">@Html.ActionLink("Create New", "Create")</div>
                    </span>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RefId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.file_path)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Crd_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Crd_By)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lmd_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lmd_By)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ISDeleted)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefId)
                                </td>
                                <td>
                                    <a href="@Html.DisplayFor(modelItem => item.file_path)">View</a>
                                    @*<img src="@Html.DisplayFor(modelItem => item.file_path)" style="height:200px;width:200px;" />*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Crd_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Crd_By)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lmd_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lmd_By)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ISDeleted)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DocId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.DocId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.DocId })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
